#!/bin/bash
install_by_default() {
  # basic tools
  package-install zsh git lua yadm nexttrace
  # replacement of system tools
  package-install lsd sd dust ripgrep fd bottom procs duf httpie
  # other tools
  package-install pueue fzf progress atuin hyperfine
  package-install git-delta gitui zellij difftastic helix
}


install_by_brew() {
  # install Homebrew if it's missing
  if ! command -v brew >/dev/null 2>&1; then
    echo "Installing Homebrew"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
    (echo; echo "eval '$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)'") >> /etc/profile
    source /etc/profile
  fi

  brew install python pdm pre-commit
  brew install ast-grep micromamba github-cli
  ln -s $HOMEBREW_PREFIX/bin/zsh /bin/zsh

  if [[ "$OSTYPE" == "darwin"* ]]; then
    brew tap pot-app/homebrew-tap
    brew install --cask pot
  fi
}

install_by_pacman() {
  sudo pacman -Sy --noconfirm paru
  sudo pacman -Sy --noconfirm python python-pdm python-pre-commit
  paru -Sy --noconfirm ast-grep micromamba github-cli
}

config_zsh() {
  if ! command -v zi >/dev/null 2>&1; then
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/z-shell/zi-src/main/lib/sh/install.sh)" -- -i skip
    zsh -cl -- '(source $HOME/.zi.zsh && @zi-scheduler burst) || true'
  fi
}

if [[ $USER == "root" ]]; then
  echo "Please login as user and run this script again:"
  echo "  su - user"
  echo "  yadm clone --bootstrap https://github.com/zrr1999/dotfiles.git"
  exit
fi

if [[ -n "$GITHUB_ACTIONS" ]]; then
  echo "::group::installing packages"
fi
if [[ -f /etc/arch-release ]]; then
  echo "system type: ArchLinux, install by pacman"
  alias package-install="sudo pacman -Sy --noconfirm"
  install_by_pacman
  install_by_default
else
  echo "other system type, install by brew"
  alias package-install="brew install"
  install_by_brew
  install_by_default
fi
if [[ -n "$GITHUB_ACTIONS" ]]; then
  echo "::endgroup::"
fi

if [[ -n "$GITHUB_ACTIONS" ]]; then
  echo "::group::configuring zsh"
fi
config_zsh
if [[ -n "$GITHUB_ACTIONS" ]]; then
  echo "::endgroup::"
fi
