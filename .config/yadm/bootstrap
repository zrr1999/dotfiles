#!/bin/bash

install_by_brew() {
  # Proudly borrowed from:
  # https://github.com/duckfullstop/dotfiles/blob/f734eea399a7ccd1c25b57242997e79f230abc4d/.config/yadm/bootstrap

  # install Homebrew if it's missing
  if ! command -v brew >/dev/null 2>&1; then
    echo "Installing Homebrew"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
    (echo; echo "eval '$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)'") >> /etc/profile
    source /etc/profile
  fi

  brew install zsh git
  brew install lsd sd dust ripgrep fd hyperfine bottom procs
  brew install pueue fzf httpie progress atuin lua yadm
  brew install git-delta gitui zellij difftastic helix
  brew install ast-grep 
  brew install python pdm pre-commit
}

install_by_pacman() {
  sudo pacman -Sy --noconfirm paru
  sudo pacman -Sy --noconfirm zsh git
  sudo pacman -Sy --noconfirm lsd sd dust ripgrep fd hyperfine bottom procs
  sudo pacman -Sy --noconfirm pueue fzf httpie progress atuin lua yadm
  sudo pacman -Sy --noconfirm git-delta gitui zellij difftastic helix
  paru -Sy --noconfirm ast-grep
  sudo pacman -Sy --noconfirm python python-pdm python-pre-commit
}

install_by_apt() {
  apt update
  apt install zsh git
  apt install python
}


config_zsh() {
  if ! command -v zi >/dev/null 2>&1; then
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/z-shell/zi-src/main/lib/sh/install.sh)" -- -i skip 
    /bin/zsh -cl -- '(source $HOME/.zi.zsh && @zi-scheduler burst) || true'
  fi
}

if [[ $USER == "root" ]]; then
  echo "Please login as user and run this script again:"
  echo "  su - user"
  echo "  yadm clone --bootstrap https://github.com/zrr1999/dotfiles.git"
  exit
fi

system_type=$(uname -s)

if [[ $system_type == "Darwin" ]]; then
  echo "system type: $system_type, install by brew"
  install_by_brew
else
  if [[ -f /etc/arch-release ]]; then
    echo "system type: ArchLinux, install by pacman"
    install_by_pacman
  elif [[ -f /etc/debian_version ]]; then
    echo "system type: Debian, install by apt"
    install_by_apt
  else
    echo "other system type, install by brew"
    install_by_brew
  fi
fi

config_zsh
